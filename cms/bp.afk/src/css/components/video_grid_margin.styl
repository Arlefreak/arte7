.video-grid-margin
    height auto
    display flex
    flex-flow row no-wrap
    align-items center
    justify-content space-between
    padding 20px 0 0 0
    article
        width 30%
    .cover
        width 100%
        padding 0 0 70% 0
        position relative
        background-color $red
        background-image url('http://placehold.it/350x300')
        background-size cover
        background-repeat no-repeat
        background-position 50%
        margin 0 0 20px 0
    .play-button
        height 20%
        width auto
        display block
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
    .info
        font-size 0.8em
        text-align center
        h3
            margin 0

.video-grid
    height auto
    width 100%
    padding 20px 0 0 0
    article
        width 33.333%
        position relative
    a:hover > .info
        background $black
    .cover
        width 100%
        padding 0 0 70% 0
        background-color $red
        background-image url('http://placehold.it/350x300')
        background-size cover
        background-repeat no-repeat
        background-position 50%
    .info
        width 100%
        font-size 0.5em
        position absolute
        bottom 0%
        height 30%
        color $white
        background transparentify($black, $black, 0.5)
        padding 2%
        box-sizing border-box
        display flex
        flex-flow column
        align-items flex-start
        justify-content center
        transition background 0.2s ease
        &:hover
            background $black
        h3
            margin 0
