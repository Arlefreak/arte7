        flex-flow column
        align-items center
        justify-content center

.mosaicos
    display flex
    width 100%
    margin auto
    flex-flow row wrap
    justify-content space-between
    align-items center
    article
        font-size 0.7em
        width calc(100% / 3 - 2%)
        padding 0
        margin 0 0 20px 0
    img
        display block
        width 100%
        height auto
    .cover
        position relative
    a
        background-color $red
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        display block
        box-sizing border-box
        opacity 0.5
        transition opacity 0.2s ease
        &:hover
            opacity 0
    h3
        color $white
        font-size 1.3em
        margin 10px auto 10px auto
        text-align center
