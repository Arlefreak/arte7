@keyframes FadeIn
    0%
        opacity 0.5
    2.38%
        opacity 1
    34.13%
        opacity 1
    36.51%
        opacity 0.5
    100%
        opacity 0.5

.messages
    display flex
    width 100%
    margin auto
    flex-flow row wrap
    justify-content space-between
    align-items stretch
    .red-message
        display flex
        font-size 0.7em
        width calc(100% / 4 - 2%)
        opacity 0.5
        transition opacity 0.2s ease-in-out
        padding 0
        margin 0
