.film-slider
    height auto
    width 100%
    padding 20px
    article
        width 33.333%
        position relative
        margin 0 20px 0 20px
    img
        width 100%
        height auto
        display block
    .info
        width 100%
        font-size 1em
        color $black
        margin 20px 0 0 0
        display flex
        flex-flow column
        align-items flex-start
        justify-content center
        h3
            margin 0
    .slick-arrow
        background transparentify($black, $black, 0.5)
        border-radius 50%
        border none
        width 20px
        height 20px
        position absolute
        top 50%
        content ""
        z-index 100
        cursor pointer
    .slick-prev
        left 2%
        transform translate(0, -50%)
    .slick-next
        right 2%
        transform translate(0, -50%)
