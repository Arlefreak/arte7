header
    width 100%
    box-sizing border-box
    background $black
    padding 40px 0 40px 0
    overflow hidden
    display flex
    height 160px
    text-transform uppercase
    .wrapper
        height 100%
        display flex
        flex-flow row wrap
        align-items center
    a
    img
    .nav-menu
        height 100%
        display flex
        flex-flow column wrap
    .nav-menu
        text-align right
        flex-grow 1
        ul
            align-items flex-end
    img
        width auto

.nav-menu
    font-size 0.5em
    letter-spacing 0.15em
    ul
        height 100%
        display flex
        flex-flow column
        justify-content space-between

.big-header
    width 100%
    padding-bottom 56.25%
    padding-top 30px
    height 0
    position relative
    overflow hidden
    display block
    .wrapper
        height 80px
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        z-index 1000
    iframe
        position absolute
        top 0
        left 0
        width 100%
        height 100%
