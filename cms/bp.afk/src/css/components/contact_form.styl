.contact_form
    display flex
    flex-flow row wrap
    font-weight 600
    font-size 1.0em
    text-transform uppercase
    color white
    justify-content space-between
    fieldset
        display flex
        flex-flow column
        width 49%
        items-algin stretch
        @media screen and (max-width: $mobile-width)
            width 100%
            margin 20px 0 0 0
        &:first-child
            @media screen and (max-width: $mobile-width)
                margin 0
        &.enviar
            width 100%
            align-items flex-end
            justify-content flex-end
            margin 20px 0 0 0
            text-align right
    p
    span
        width 100%
        display block
    span
        font-weight 200
    input
    textarea
        width 100%
        flex-grow 1
        margin 0
        color white
        background transparent
        font-weight 600
        font-size 1.0em
        text-transform uppercase
        color white
        border-radius 0
        border none
        box-shadow none
        outline none
        border-bottom 2px solid $white
        margin 10px auto 10px auto
        padding 10px 0 10px 0
        transition border-color .2s ease
        &:first-child
            margin 0 auto 10px auto
        &:last-child
            margin 10px auto 0 auto
        &::placeholder
            color white
            text-transform uppercase
            font-weight 600
            font-size 1.0em
        &:focus
        &:invalid
            border-radius 0
            border none
            box-shadow none
            outline none
            border-bottom 2px solid $red
        &:invalid
            color $red
        &[type="submit"]
            color $red
            border 2px solid $white
            width 100px
            margin 0
            cursor pointer
            transition border-color 0.2s ease
            &:hover
                border-color $red
        &[type="radio"]
            opacity 0
            position absolute
            &:focus+label
            &:checked+label
                color $red
            &:disabled+label
                opacity 0.8
            &+label
                font-weight 200
                cursor pointer
                width 100%
                display block
                margin 5px auto 5px auto
                transition color 0.2s ease
                &:first-of-type
                    margin 20px auto 5px auto
                &:last-of-type
                    margin 5px auto 0 auto
    textarea
        resize none
        overflow auto
        font-size 1.25em
        &::selection
            background-color $white
            color $black
