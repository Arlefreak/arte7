.video-grid
    height auto
    width 100%
    max-width none
    padding 20px 0 0 0
    article
        width 33.333%
        position relative
    a:hover > .info
        background $black
    .cover
        width 100%
        padding 0 0 70% 0
        background-color $red
        background-image url('http://placehold.it/350x300')
        background-size cover
        background-repeat no-repeat
        background-position 50%
    .info
        width 100%
        font-size 0.7em
        line-height 1.3em
        position absolute
        bottom 0%
        height 30%
        color $white
        background transparentify($black, $black, 0.5)
        padding 2%
        box-sizing border-box
        display flex
        flex-flow column
        align-items flex-start
        justify-content center
        transition background 0.2s ease
        &:hover
            background $black
        h3
            margin 0
    .play-button
        position absolute
        width 50px
        height auto
        display block
        right 10%
        top 50%
        transform translate(0,-50%)
