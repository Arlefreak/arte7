.personal-grid
    display flex
    flex-flow column
    justify-content space-between
    article
        width 100%
        margin 0 auto 40px auto
        display flex
        flex-flow row
        justify-content space-between
        align-items flex-start
    .avatar
        display block
        width 28%
        height 300px
        background-color $red
        background-size cover
        background-repeat no-repeat
        background-position 50%
    .info
        width 70%
    img
        display block
        width 100%
        height auto
