h1
    margin 0 auto 20px auto
    font-size 2.0em
h2
    font-size 2.5em
    font-weight 800
    letter-spacing 0.2em
    text-transform uppercase
    width 100%
    text-align center
    margin 0 auto 20px auto
    padding 20px 0 0 0
h3
    font-size 1.1em
    font-weight 800
    margin 0 auto 20px auto
    text-transform uppercase
h4
    font-size 1.0em
    font-weight 800
    margin 20px auto 20px auto
    text-transform uppercase
h5
    font-size 1.0em
    font-weight 600
    margin 0 auto 20px auto
    text-transform uppercase
    width 100%
    text-align left
p
    margin auto
    font-size 1em
    hyphens auto
    line-height 1.2em
    letter-spacing 0.05em
    &.big
        font-size 1.25em
        font-weight 600
        line-height 1.4em
        /* letter-spacing 0.2em */
strong
    font-weight 600
a
    color $white
    text-decoration none
    transition color 0.2s ease
    cursor pointer
    &:hover
        color $red
main
    background $white
    color $black
    width 100%
    box-sizing border-box

.padding-top
    padding 20px 0 0 0

.wrapper
    width 80%
    max-width 1500px
    display block
    margin auto

.nav-menu
    font-size 0.5em
    letter-spacing 0.15em
    ul
        height 100%
        display flex
        flex-flow column
        justify-content space-between

.two-column
    margin 20px auto 0 auto
    display flex
    flex-flow row
    align-items flex-start
    justify-content space-between
    padding 0 0 20px 0
    .column
        display flex
        flex-flow column
        &:first-child
            width 40%
        &:last-child
            width 58%

.red-message
    color $red
    margin 0 auto 10px auto
    box-sizing border-box
    border 2px solid $red
    padding 10px
    width 100%
    text-align center
    line-height 1.2em
    strong
        text-transform uppercase
        margin 0 10px 0 0
.temario
    background $gray1
    box-sizing border-box
    padding 20px
    .column
        &:last-of-type
            border-left 1px solid $black
            padding 0 0px 0 20px
    h3
        width 100%
        text-align left
    ul
        &:first-of-type
            font-weight 800
            text-transform uppercase
            font-size 1.0em
            li
                margin 10px 0 10px 0
                &:first-child
                    margin 0px 0 10px 0
                &:last-child
                    margin 10px 0 0 0
    a
        color $black
        transition color ease 0.2s
        &:hover
            color $red

.rich-text
    margin 0px auto 0 auto
    strong
        text-transform uppercase
    li
        margin 5px 0 5px 0
        padding 0 0 0 10px
        position relative
        &:first-child
            margin 0 0 5px 0
        &:last-child
            margin 5px 0 0 0
        &:before 
            content '\2219'
            position absolute
            left 0
