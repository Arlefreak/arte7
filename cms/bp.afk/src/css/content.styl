h1
    font-size 2.5em
    font-weight 800
    letter-spacing 0.2em
    text-transform uppercase
    width 100%
    text-align center
    margin 0 auto 40px auto
    @media screen and (max-width: $tablet-width)
        font-size 2.0em
    @media screen and (max-width: $mobile-width)
        font-size 1.0em
    &.big
        font-size 1.0em
        color $white
        font-size 3.0em
        a
            color $white
            font-weight 800
            text-transform lowercase
            &:hover
                color $red
        @media screen and (max-width: $tablet-width)
            font-size 1.5em
        @media screen and (max-width: $mobile-width)
            font-size 1.2em
h2
    font-size 1.2em
    font-weight 800
    margin 0 auto 20px auto
    text-transform uppercase
    @media screen and (max-width: $mobile-width)
        font-size 0.9em
h3
    font-size 1.1em
    font-weight 800
    margin 0 auto 20px auto
    text-transform uppercase
    @media screen and (max-width: $mobile-width)
        font-size 0.8em
h4
    font-size 1.0em
    font-weight 600
    margin 0 auto 20px auto
    text-transform uppercase
    width 100%
    text-align left
    @media screen and (max-width: $mobile-width)
        font-size 0.01em
h5
    font-size 1.0em
    font-weight 200
    margin 0 auto 20px auto
    text-transform uppercase
    @media screen and (max-width: $mobile-width)
        font-size 0.01em
p
    margin auto
    font-size 1em
    line-height 1.2em
    letter-spacing 0.02em
.big
    font-size 1.5em
    font-weight 600
    line-height 1.4em
    @media screen and (max-width: $mobile-width)
        font-size 1.0em
        font-weight 100
strong
    font-weight 600
a
    color $white
    text-decoration none
    transition color 0.2s ease
    cursor pointer
    &:hover
    &.active
        color $red
main
    background $colorBg
    color $black
    width 100%
    box-sizing border-box

.padding-top
    padding-top 40px
.padding-bottom
    padding-bottom 40px

.wrapper
    width 80%
    /* max-width 1280px */
    display block
    margin auto
    /* min-width 780px */

.full-width
    width 100%

.black-wrapper
    color $white
    background $black
    padding 0 0 20px 0
    margin auto
    h1
        margin auto

.red-message
    color $red
    margin 0 auto 20px auto
    box-sizing border-box
    border 2px solid $red
    padding 10px
    width 100%
    text-align center
    line-height 1.2em
    strong
        text-transform uppercase
        margin 0 10px 0 0
.temario
    background $gray2
    box-sizing border-box
    padding 20px
    h3
        width 100%
        text-align left
.left-border
    border-left 1px solid $black
    padding 0 0px 0 20px

.titles
    font-weight 800
    text-transform uppercase
    font-size 1.0em
    @media screen and (max-width: $tablet-width)
        font-size 0.7em
    @media screen and (max-width: $mobile-width)
        font-size 1.0em
    li
        margin 10px 0 10px 0
        &:first-child
            margin 0px 0 10px 0
        &:last-child
            margin 10px 0 0 0
    a
        color $black
        transition color ease 0.2s
        &:hover
        &.active
            color $red

.nav-menu
    font-size 0.6em
    letter-spacing 0.25em
    ul
        height 100%
        display flex
        flex-flow column
        justify-content space-between

.gray-bg
    background-color $gray2

.black-background
    background-color $black
    .big
        color $white

.margin
    width 100%
    display block
    padding 20px 0 20px 0
    background-color transparent

.video-wrapper
    width 100%
    padding-bottom 56.25%
    padding-top 25px
    height 0
    position relative
    overflow hidden
    display block
    iframe
        position absolute
        top 0
        left 0
        width 100%
        height 100%

.slider-wrapper
    position relative

.slider-controls
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display flex
    flex-flow row
    align-items center
    justify-content space-between
    z-index 1000
    .arrow
        display block
        width 25px
        height auto
        cursor pointer
    .arrow-next
        margin 0 1% 0 0
    .arrow-prev
        margin 0 0 0 1%
.arrow
    display block
    width 25px
    height auto
    cursor pointer
    position absolute
    top 50%
    z-index 1000
.arrow-next
    right 1%
    transfrom translate(0, -50%)
.arrow-prev
    left 1%
    transfrom translate(0, -50%)

